{% extends 'base.html.twig' %}

{% block title %}Hello RestaurantController!{% endblock %}

{% block body %}


    <div class="container">
        <h1> La liste des restaurants</h1><hr>

        <div class="my-3">
            <a class="btn btn-left btn-success" href="#" role="button">Nouveau </a>
            <a class="btn btn-left btn-danger"   href="#" role="button">Supprimmer tout</a>
        </div>


        <table class="table">
            <thead>
            <tr>

                <th>Name</th>
                <th>Description</th>
                <th>Create_at</th>
                <th>City</th>
                <th>action</th>
            </tr>
            </thead>
            <tbody>
            {% for restaurant in restaurants %}
                <tr>

                    <td>{{ restaurant.name }}</td>
                    <td>{{ restaurant.description }}</td>
                    <td>{{ restaurant.getCreatedAt() | date}}</td>
                    <td>{{ restaurant.getCityId().getName()}}</td>
                    <td>
                        <a class="btn btn-primary" href="#" role="button">Edit</a>
                        <a class="btn btn-danger"   href="{{ path('restaurant.delete',{'id':restaurant.id})}}" role="button">Delete</a>
                    </td>
                </tr>
            {% endfor %}


            </tbody>
        </table>
    </div>




{% endblock %}